.controls
	padding: 24px
	display: flex

	.btn
		padding: 16px 24px
		background-color: gray
		color: white
		font-weight: bold
		border-radius: 4px
		margin-left: 36px
		cursor: pointer

	.reset
		background-color: gray

	.next
		width: 85px
		background-color: green

	.penalty
		margin-left: 48px
		background-color: red

.notes
	&__inner
		display: flex

	&__answer, &__done
		display: flex
		align-items: center
		font-size: 127px
		margin-left: 165px
		font-weight: bold

.ponies
	display: flex
	flex-wrap: wrap

	img
		margin-right: 24px
