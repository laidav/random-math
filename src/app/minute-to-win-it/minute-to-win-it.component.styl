.controls
	padding: 24px
	display: flex

	.btn
		padding: 16px 24px
		background-color: gray
		color: white
		font-weight: bold
		border-radius: 4px
		margin-left: 36px
		cursor: pointer

	.reset
		background-color: gray

	.next
		width: 85px
		background-color: green

	.penalty
		margin-left: 48px
		background-color: red

.notes
	&__inner
		display: flex

	&__answer, &__done
		display: flex
		align-items: center
		font-size: 127px
		margin-left: 165px
		font-weight: bold
	&__image
		width: 300px
		height: 390px

.ponies
	display: flex
	flex-wrap: wrap

	&__card
		height: 150px
		width: 150px
		background-size: cover
		background-position: center center

		&:nth-child(n)
			background-image: url("../../assets/rainbowdash.png")
		&:nth-child(2n)
			background-image: url("../../assets/pinkypie.jpg")
		&:nth-child(3n)
			background-image: url("../../assets/celestia.jpg")
		&:nth-child(4n)
			background-image: url("../../assets/luna.jpg")
		&:nth-child(5n)
			background-image: url("../../assets/cadance.webp")
		&:nth-child(6n)
			background-image: url("../../assets/twilightsparkle.webp")
		&:nth-child(7n)
			background-image: url("../../assets/rarity.png")

	img
		margin-right: 24px
